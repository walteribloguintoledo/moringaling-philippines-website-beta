datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id                    String     @id @default(cuid())
  email                 String     @unique
  name                  String?
  createdAt             DateTime   @default(now())
  updatedAt             DateTime   @updatedAt
  image                 String?
  password              String?
  role                  String     @default("user") // user, admin, moderator
  avatar                String?    // cloud storage path for avatar
  bio                   String?
  isActive              Boolean    @default(true)
  emailVerified         Boolean    @default(false) @map("email_verified")
  verificationToken     String?    @unique @map("verification_token")
  verificationTokenExpiry DateTime? @map("verification_token_expiry")

  accounts      Account[]
  sessions      Session[]
  forumPosts    ForumPost[]
  forumComments ForumComment[]
  postLikes     ForumPostLike[]
  commentLikes  ForumCommentLike[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Contact Form Submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())
  status    String   @default("new") // new, read, responded

  @@map("contact_submissions")
}

// Donation Records
model Donation {
  id            String   @id @default(cuid())
  donorName     String   @map("donor_name")
  donorEmail    String   @map("donor_email")
  donorPhone    String?  @map("donor_phone")
  amount        Decimal  @db.Decimal(10, 2)
  currency      String   @default("PHP")
  paymentMethod String   @map("payment_method") // GCash, QR_PH
  status        String   @default("pending") // pending, completed, failed
  proofUploaded Boolean  @default(false) @map("proof_uploaded")
  proofPath     String?  @map("proof_path") // cloud storage path
  notes         String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("donations")
}

// Membership Applications
model MembershipApplication {
  id             String   @id @default(cuid())
  fullName       String   @map("full_name")
  email          String
  phone          String
  address        String   @db.Text
  cityProvince   String   @map("city_province")
  reasonForJoining String @map("reason_for_joining") @db.Text
  membershipType String   @map("membership_type") // Individual, Organization
  status         String   @default("pending") // pending, approved, rejected
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("membership_applications")
}

// Forum Categories
model ForumCategory {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?     @db.Text
  color       String?     // hex color for category
  icon        String?     // lucide icon name
  order       Int         @default(0)
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  
  posts       ForumPost[]

  @@map("forum_categories")
}

// Forum Posts
model ForumPost {
  id          String    @id @default(cuid())
  title       String
  content     String    @db.Text
  slug        String    @unique
  authorId    String    @map("author_id")
  categoryId  String    @map("category_id")
  isPinned    Boolean   @default(false) @map("is_pinned")
  isLocked    Boolean   @default(false) @map("is_locked")
  isApproved  Boolean   @default(false) @map("is_approved")
  viewCount   Int       @default(0) @map("view_count")
  likeCount   Int       @default(0) @map("like_count")
  replyCount  Int       @default(0) @map("reply_count")
  lastReplyAt DateTime? @map("last_reply_at")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author      User               @relation(fields: [authorId], references: [id], onDelete: Cascade)
  category    ForumCategory      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  comments    ForumComment[]
  likes       ForumPostLike[]

  @@map("forum_posts")
}

// Forum Comments/Replies
model ForumComment {
  id         String    @id @default(cuid())
  content    String    @db.Text
  authorId   String    @map("author_id")
  postId     String    @map("post_id")
  parentId   String?   @map("parent_id") // for nested replies
  isApproved Boolean   @default(false) @map("is_approved")
  likeCount  Int       @default(0) @map("like_count")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  author     User                @relation(fields: [authorId], references: [id], onDelete: Cascade)
  post       ForumPost           @relation(fields: [postId], references: [id], onDelete: Cascade)
  parent     ForumComment?       @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    ForumComment[]      @relation("CommentReplies")
  likes      ForumCommentLike[]

  @@map("forum_comments")
}

// Forum Post Likes
model ForumPostLike {
  id     String @id @default(cuid())
  userId String @map("user_id")
  postId String @map("post_id")

  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   ForumPost @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([userId, postId])
  @@map("forum_post_likes")
}

// Forum Comment Likes
model ForumCommentLike {
  id        String @id @default(cuid())
  userId    String @map("user_id")
  commentId String @map("comment_id")

  user      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  comment   ForumComment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  @@unique([userId, commentId])
  @@map("forum_comment_likes")
}
